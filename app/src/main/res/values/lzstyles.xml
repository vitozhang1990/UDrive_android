<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="line_vertical">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray</item>
    </style>

    <declare-styleable name="DrawerItemView">
        <attr name="item_image_src" format="reference" />
        <attr name="item_image_left_margin" format="dimension" />
        <attr name="item_tv_mid_text" format="string" />
        <attr name="item_tv_mid_text_size" format="dimension" />
        <attr name="item_tv_mid_text_color" format="color" />
        <attr name="item_tv_mid_left_margin" format="dimension" />
        <attr name="item_tv_right_text" format="string" />
        <attr name="item_tv_right_text_size" format="dimension" />
        <attr name="item_tv_right_text_color" format="color" />
        <attr name="item_tv_right_right_margin" format="dimension" />
    </declare-styleable>
    <declare-styleable name="DrawerBottomItemView">
        <attr name="bottom_image_src" format="reference" />
        <attr name="bottom_tv_text" format="string" />
        <attr name="bottom_tv_text_size" format="dimension" />
        <attr name="bottom_tv_text_color" format="color" />
        <attr name="bottom_tv_top_margin" format="dimension" />
    </declare-styleable>
    <declare-styleable name="UserInfoItemView">
        <attr name="user_image_src_2" format="reference" />
        <attr name="user_tv_left_text" format="string" />
        <attr name="user_tv_left_text_size" format="dimension" />
        <attr name="user_tv_left_text_color" format="color" />
        <attr name="user_tv_left_margin" format="dimension" />
        <attr name="user_tv_right_text" format="string" />
        <attr name="user_tv_right_text_size" format="dimension" />
        <attr name="user_tv_right_text_color" format="color" />
        <attr name="user_tv_right_margin" format="dimension" />
        <attr name="user_tv_mid_margin" format="dimension" />
    </declare-styleable>

</resources>