<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/vp_adv"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/pic_enjoy">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="96dp"
            android:gravity="center"
            android:text="获得10个红包，分享给小伙伴\n自己也可以领取哟~"
            android:textColor="#33333D"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btn_share"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="106dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="55dp"
            android:background="@drawable/bg_share_button"
            android:text="分享好友"
            android:textColor="@color/white" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vp_adv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_48"
        android:src="@mipmap/ic_ad_close" />
</RelativeLayout>