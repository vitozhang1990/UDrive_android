<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_header" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/btn_bg"
            android:gravity="center"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/deposit_tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 元"
                android:textColor="@android:color/white"
                android:textSize="35sp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/deposit_tv_status"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="未缴纳"
                android:textColor="@color/white"
                android:textSize="@dimen/dbs_textsize_normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/horizontal_commen_margin"
            android:layout_marginRight="@dimen/horizontal_commen_margin"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/deposit_btn_withdraw"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/bg_bottom_radius1"
                android:enabled="false"
                android:text="押金退还"
                android:textColor="@android:color/white" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/deposit_btn_recharge"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginLeft="@dimen/horizontal_commen_margin"
                android:layout_weight="1"
                android:background="@drawable/bg_bottom_radius1"
                android:enabled="false"
                android:text="充值押金"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
