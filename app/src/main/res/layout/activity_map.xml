<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:fitsSystemWindows="true">

    <com.amap.api.maps.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_yuding"
        android:layout_marginBottom="@dimen/dp_5">

        <include
            layout="@layout/layout_ydmap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    
    <Button
        android:id="@+id/btn_yongche"
        android:layout_width="106dp"
        android:layout_height="@dimen/dp_44"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/bg_map_button_22"
        android:text="@string/lijiyongche"
        android:textColor="@color/white"
        android:visibility="visible" />

    <Button
        android:id="@+id/btn_yuding"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/bg_map_button"
        android:text="@string/mashangyuding"
        android:textColor="@color/white"
        android:visibility="gone" />
</RelativeLayout>
