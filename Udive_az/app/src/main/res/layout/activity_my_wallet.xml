<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".lz.ui.wallet.MyWalletActivity">

    <include layout="@layout/layout_lz_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="在线充值"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/shape_lz_btn_bg">


                <TextView
                    android:id="@+id/tv_yu_e"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="余额"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_yu_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tv_yu_e"
                    android:layout_below="@id/tv_yu_e"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:maxLength="13"
                    android:maxLines="1"
                    android:text="¥ 0.00"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <View
                    android:id="@+id/view_center"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_centerInParent="true" />


                <TextView
                    android:id="@+id/tv_zeng_e"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/tv_zeng_e_msg"
                    android:layout_marginLeft="50dp"
                    android:layout_toRightOf="@id/view_center"
                    android:text="赠额"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_zeng_e_msg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/tv_zeng_e"
                    android:gravity="right"
                    android:text="¥ 0.00"

                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_ben_jin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tv_zeng_e"
                    android:layout_below="@id/tv_zeng_e"
                    android:layout_marginTop="5dp"
                    android:text="本金"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tv_ben_jin_msg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/tv_ben_jin"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/tv_ben_jin"
                    android:gravity="right"
                    android:text="¥ 0.00"

                    android:textColor="@color/white" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv30"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_lz_money"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="30元"

                    android:textColor="@color/btn_bg" />

                <TextView
                    android:id="@+id/tv50"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_lz_money"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="50元"

                    android:textColor="@color/btn_bg" />

                <TextView
                    android:id="@+id/tv100"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selector_lz_money"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="100元"

                    android:textColor="@color/btn_bg" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv300"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_lz_money"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="300元"

                    android:textColor="@color/btn_bg" />

                <TextView
                    android:id="@+id/tv1000"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_lz_money"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="1000元"

                    android:textColor="@color/btn_bg" />

                <EditText
                    android:id="@+id/et_custom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:inputType="number"
                    android:background="@drawable/selector_lz_money"
                    android:paddingTop="10dp"
                    android:hint="手动输入"
                    android:textColor="@color/btn_bg" />
            </LinearLayout>

            <EditText
                android:id="@+id/ed_monty"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_et_bg"
                android:inputType="number"
                android:paddingLeft="5dp"
                android:visibility="gone" />

            <cn.com.i_zj.udrive_az.lz.view.PaymentView
                android:id="@+id/pay_alipay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" />

            <cn.com.i_zj.udrive_az.lz.view.PaymentView
                android:id="@+id/pay_wechat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:id="@+id/tv_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:layout_marginTop="15dp"
                android:paddingTop="5dp"
                android:visibility="gone"
                android:text=""
                android:textColor="@color/black" />


            <Button
                android:id="@+id/btn_commit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_lz_btn_bg"
                android:text="去充值"
                android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>