<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dbs_activity_bg_color"
    android:orientation="vertical">
<include layout="@layout/layout_lz_toolbar"/>
    <LinearLayout
        android:id="@+id/wallet_layout_balance"
        android:layout_width="match_parent"
        android:layout_height="@dimen/commen_label_item_height"
        android:layout_marginTop="15dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/horizontal_commen_margin"
        android:paddingRight="@dimen/horizontal_commen_margin">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/wallet_balance"/>

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="余额"
            android:textColor="@color/text_gray_color"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/wallet_tv_balance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/text_gray_color"/>

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/arrow_gray"/>
    </LinearLayout>

    <View style="@style/DBSDividerLine.Horizontal"/>
    <LinearLayout
        android:id="@+id/wallet_layout_coupon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/commen_label_item_height"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/horizontal_commen_margin"
        android:paddingRight="@dimen/horizontal_commen_margin">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/wallet_coupon"/>

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="优惠券"
            android:textColor="@color/text_gray_color"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/wallet_tv_coupon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/text_gray_color"/>

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/arrow_gray"/>
    </LinearLayout>
</LinearLayout>