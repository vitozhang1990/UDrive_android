<?xml version="1.0" encoding="utf-8"?><!--新的优惠券-->
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_sixteen"
    android:layout_marginLeft="@dimen/margin_sixteen"
    android:layout_marginRight="@dimen/margin_sixteen"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@mipmap/item_pic"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:src="@mipmap/pic_car_lite_mid"
            android:scaleType="fitXY"
            android:id="@+id/iv_image"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="@dimen/margin_sixteen"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/ll_value"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:text="注册优惠券"
                    android:textSize="@dimen/text_size_sixteen"
                    android:id="@+id/tv_coupons_name"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:id="@+id/tv_coupons_time"
                    android:layout_marginTop="@dimen/margin_eight"
                    android:text="使用期限 2018-09-15 至2018-09-16"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:id="@+id/ll_value"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:text="100"
                    android:id="@+id/tv_value"
                    android:textSize="30sp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:text="元"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottom_radius_white"
        android:padding="@dimen/margin_eight">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22222222222222222222"
            android:layout_alignParentLeft="true"
            android:id="@+id/tv_name"
            android:layout_marginRight="@dimen/margin_4"
            android:layout_toLeftOf="@+id/tv_time"
            android:textColor="@color/gray"

            android:textSize="@dimen/text_size_fourteen" />
    </RelativeLayout>
</LinearLayout>