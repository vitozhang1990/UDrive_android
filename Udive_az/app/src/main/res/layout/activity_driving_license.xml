<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical">

    <include layout="@layout/layout_lz_toolbar" />

    <View style="@style/line_horizontal" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_eight">

                <ImageView
                    android:id="@+id/iv_one"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/margin_4"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@mipmap/pic_driverlicensefrontbg" />

                <ImageView
                    android:id="@+id/iv_two"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_4"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@mipmap/pic_driverlicensebg" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_sixteen"
                android:layout_marginBottom="@dimen/margin_sixteen"
                android:gravity="center"
                android:text="请核实您的证件信息"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/text_size_sixteen" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_eight"
                android:paddingLeft="@dimen/margin_sixteen"
                android:paddingRight="@dimen/margin_sixteen">

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="证件类型" />

                <Spinner
                    android:id="@+id/sp_type"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_38"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/margin_eight"
                    android:layout_toRightOf="@+id/tv_type"
                    android:background="@drawable/shape_gray_et_bg"
                    android:gravity="center|left"
                    android:lines="1"
                    android:paddingLeft="@dimen/margin_4"
                    android:paddingRight="@dimen/margin_4" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_eight"
                android:paddingLeft="@dimen/margin_sixteen"
                android:paddingRight="@dimen/margin_sixteen">

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="档案编号" />

                <EditText
                    android:id="@+id/et_number"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_38"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/margin_eight"
                    android:layout_toRightOf="@+id/tv_num"
                    android:background="@drawable/shape_gray_et_bg"
                    android:lines="1"
                    android:paddingLeft="@dimen/margin_4"
                    android:paddingRight="@dimen/margin_4" />
            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_fifty"
                android:drawableLeft="@mipmap/ic_safety"
                android:text="该信息仅用于实名认证不会泄露于任何第三方"
                android:textSize="@dimen/text_size_twelve" />

            <Button
                android:id="@+id/btn_commit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="@dimen/margin_sixteen"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_black_selector"
                android:enabled="false"
                android:text="提交"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>