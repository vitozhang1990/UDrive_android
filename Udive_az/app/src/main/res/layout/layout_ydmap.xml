<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_above="@+id/viewpager"
        android:layout_marginBottom="@dimen/dp_5"
        android:background="@drawable/bg_map_white"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_14"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_14"
            >
            <TextView
                android:id="@+id/tv_pname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="益阳停车场"
                android:textSize="18sp"
                android:textColor="@color/color_map_btn"
                android:layout_marginBottom="@dimen/dp_10"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_pname"
                >
                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/marker2"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/dp_2"
                    />
                <TextView
                    android:id="@+id/tv_paradress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv1"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textColor="#999999"
                    android:textSize="@dimen/dp_12"
                    android:text="双流区华府大道一段688号"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_18"
            >
            <ImageView
                android:id="@+id/iv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/juli"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/tv_dis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv2"
                android:text="872m"
                android:textSize="12sp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="#999999"
                />
        </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/rl1"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@color/line"
            android:layout_marginRight="@dimen/dp_18"
            />
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_5"
        android:background="@drawable/bg_map_white"
        >

    </android.support.v4.view.ViewPager>
    <android.support.design.widget.TabLayout
        android:id="@+id/tblayout"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:tabIndicatorColor="@color/white"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_10"
        app:tabMode="fixed"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        >

    </android.support.design.widget.TabLayout>

</RelativeLayout>