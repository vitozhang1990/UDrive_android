<resources>

    <style name="DBSTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="actionMenuTextColor">@color/app_main_color</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="DBSActivity" parent="DBSTheme"/>

    <style name="DBSActivity.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="DBSActivity.FullScreen" parent="DBSActivity.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="GiftBottomDialog" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <!-- divider -->
    <style name="DBSDividerLine">
        <item name="android:background">@color/dbs_divider_line_color</item>
    </style>

    <style name="DBSDividerLine.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_line_height</item>
    </style>

    <style name="DBSDividerLine.Horizontal.Margin">
        <item name="android:layout_marginLeft">@dimen/horizontal_commen_margin</item>
        <item name="android:layout_marginRight">@dimen/horizontal_commen_margin</item>
    </style>

    <style name="DBSDividerLine.Vertical">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/divider_line_height</item>
    </style>

    <style name="soft_input_btn_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/round_corner_white_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
